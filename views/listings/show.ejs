<% layout("layouts/boilerplate.ejs")%>
<div class="row">
    <div class="col-8 offset-3">
        <h3><%=listing.title%></h3>
    </div>
        <div class="card show-card col-6 offset-3">
            <img src="<%=listing.image%>" class="card-img-top show-img" alt="Listing_image">
            <div class="card-body">
                <p class="card-text">
                    <%=listing.description%>
                    <br>
                    &#8377; <%=listing.price.toLocaleString("en-IN")%>
                    <br>
                    <%=listing.location%>
                    <br>
                    <%=listing.country%>
                </p>
            </div>
        </div>
        <br>
        <div class="btns offset-3">
            <a class="btn btn-dark col-1 me-2" href="/listings/<%=listing._id%>/edit">Edit</a>
            <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
                <button class="btn btn-dark delete-btn  offset-4">Delete</button>
            </form>
        </div>
        <div col-9 offset-3>
            <h4>Leave a review</h4>
            <form action="">
                <div>
                    <label for="rating">Rating</label>
                    <input type="range" min="1" max="5" name="review[rating]">
                </div>
                <div>
                    <label for="comment">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="10"></textarea>
                </div>
                <button>Submit</button>
            </form>
        </div>
        
</div> 

    
